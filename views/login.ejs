<style>


    #logo{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px;
    }

    #login-section{
        display: flex;
        justify-content: center;
        align-items: center;
        /* background-color: #ffffff; */
    }

    #login-panel{
        background-color: rgba(165, 42, 42, 0.397);
        padding: 30px 10px;
        border-radius: 10px;
        box-shadow: 0px -25px 20px -20px rgba(0, 0, 0, 0.45), 25px 0 20px -20px rgba(0, 0, 0, 0.45), 0px 25px 20px -20px rgba(0, 0, 0, 0.45), -25px 0 20px -20px rgba(0, 0, 0, 0.45);
        width: min-content;
    }

    form{
        text-align: center;
    }

    form input{
        padding: 10px;
        margin: 10px;
        border-radius: 10px;
        border: none;
    }
    
    form button{
        padding: 10px;
        margin: 10px;
    }

    #login-alt{
        text-align: center;
    }

    .login-alt-btn{
        padding: 10px;
    }

    .login-alt-btn a{
        width: 240px;
    }
