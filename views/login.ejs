    <a class="navbar-brand" href="/" style="color: white;"><i class="fa-solid fa-icons fa-2xl" style="color: #ffffff;"></i> Wando</a>
</div>

<div id="login-section">
    <div id="login-panel">
        <div id="login-form">
            <form id="form" action="/login" method="POST">
                <div>
                    <input type="email" name="email" placeholder="Email">
                </div>
                <div>
                    <input type="password" name="password" placeholder="password">
                </div>

                <div>
                    <button class="btn btn-dark" type="submit">Login</button>
                </div>
                
            </form> 
        </div>

        <hr>

        <div id="login-alt">
            <div class="login-alt-btn">
                <a class="btn btn-block btn-social btn-google" href="/auth/google"><i class="fab fa-google"></i>Log In with Google</a>
            </div>
            <!-- <div class="login-alt-btn">
                <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook"><i class="fab fa-facebook"></i>Log In with Facebook</a>
            </div> -->
            <div class="login-alt-btn">
                <a class="btn btn-block btn-social btn-twitter" href="/auth/twitter"><i class="fab fa-twitter"></i>Log In with Twitter</a>
            </div>
